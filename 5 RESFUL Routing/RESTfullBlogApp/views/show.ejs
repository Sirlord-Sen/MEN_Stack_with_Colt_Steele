<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= Blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img src="<%= Blog.image %>" alt="" class="ui centered rounded image">
            <div class="content">
                <span><%= Blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <!-- Replacing the '=' with '-' evaluates whatever that is inside that tag -->
                <p><%- Blog.body %></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= Blog._id %>/edit">Edit</a>
            <form action="/blogs/<%= Blog._id %>?_method=DELETE" method="POST" id="delete">
                <button id="deleteButton" class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>